page {
  background-color: #F5F6F8;
}
.content {
  height: 100%;
  width: 100%;
}
.moviemsg {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
}
.moviemsg image {
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;
}
.moviemsg .mtitle {
  font-size: 22px;
  color: #333333;
  font-weight: bold;
}
.moviemsg .etitle {
  font-size: 14px;
  color: #808080;
}
.moviemsg .mclass text {
  font-size: 12px;
  color: #808080;
  margin-right: 10rpx;
}
.moviemsg .btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.moviemsg .btn .look {
  width: 200rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  margin-right: 20px;
  border-radius: 10px;
  text-align: center;
  line-height: 80rpx;
}
.moviemsg .btn .look image {
  width: 30rpx;
  height: 30rpx;
}
.score {
  width: 710rpx;
  margin: 30px auto;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.score .stitle {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.score .ti {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.score .ti .dbsc {
  font-size: 16px;
  margin-right: 5rpx;
}
.score .ti .tm {
  font-size: 8px;
}
.int {
  padding: 20rpx;
}
.movieman {
  padding: 20rpx;
}
.movieman .castsbox {
  width: 100%;
  white-space: nowrap;
}
.movieman .castsbox .casts {
  display: inline-block;
  margin-right: 20rpx;
}
.movieman .castsbox .casts image {
  width: 200rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
}
.movieman .castsbox .casts .name {
  font-size: 20rpx;
}
.movieman .castsbox .casts .position {
  font-size: 14rpx;
}

